<!-- invoice_table_template.xml -->
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    android:padding="0dp">

    <!-- Header Row -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/txt_linhafatura_name"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvPreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/txt_linhafatura_price"
            android:textColor="@color/blue_grey"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />



        <TextView
            android:id="@+id/tvPercentagemIva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/txt_linhafatura_iva"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/txt_linhafatura_quantity"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_linhafatura_total"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>
</TableLayout>


